---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("pages", "contact");

const title = "Request membership";
const meta_title = "Register as a Member";
const description = "Join our scientific community by becoming a member today.";
const image = entry.data.image;
---

<Base title={title} meta_title={meta_title} description={description} image={image}>
  <section class="section">
    <div class="container">
      <h1 class="h2 page-heading text-center">{title}</h1>

      <p class="text-center mb-6 text-lg">
        Join a dynamic scientific network! As a member, you'll:
      </p>

      <div class="flex justify-center">
        <ul class="mb-10 space-y-4 text-theme-dark text-lg text-left">
          <li class="flex items-start gap-2">
            <span class="text-blue-600 mt-1">🤝</span>
            <span>Connect with peers, mentors, and leaders in your field.</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-blue-600 mt-1">🚀</span>
            <span>Get feedback, exchange ideas, and access resources.</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-blue-600 mt-1">🎓</span>
            <span>Contribute to scientific progress and community impact.</span>
          </li>
        </ul>
      </div>

      <div class="flex justify-center">
        <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSe2Uuce0XUiBbsmyqP01rpCvOloqdXDFpdsIEsiNgF-dRaH4w/viewform?embedded=true" 
        width="100%"
        height="1000"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
        loading="lazy"
        class="w-full max-w-3xl"
      >  Loading…
    </iframe>
    </div>
  </section>
</Base>
